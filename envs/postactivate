# This hook is sourced after every virtualenv is activated.
if [ ! -f tags ]; then
    ctags -R --fields=+l --languages=python --python-kinds=-iv -f tags $VIRTUAL_ENV/lib/python*/site-packages $PWD &> /dev/null & disown
fi
# ctags -R --fields=+l --languages=python --python-kinds=-iv -f ./tags $(python -c "import os, sys; print(' '.join('{}'.format(d) for d in sys.path if os.path.isdir(d)))") $PWD & disown
rehash
